#Connecting to an API using Python
import requests
#download requests package, using Python's built-in terminal | "pip install requests".

base_url="https://pokeapi.co/api/v2/"

def get_pokemon_info(name):
    url=f"{base_url}/pokemon/{name}"
    response=requests.get(url)

    if response.status_code==200:
        pokemon_data=response.json() #prints the dictionary
        return pokemon_data
#        print(pokemon_data) #prints data on pikachu

    else:
        print(f'Failed to retrieve data{response.status_code}')

pokemon_name="typhlosion"
pokemon_info = get_pokemon_info(pokemon_name)

if pokemon_info:
    print(f'Name:{pokemon_info["name"].title()}')
    print(f'ID:{pokemon_info["id"]}')
    print(f'Height:{pokemon_info["height"]}')
    print(f'Weight:{pokemon_info["weight"]}')
    # print(f'Moves:{pokemon_info["moves"]}')
